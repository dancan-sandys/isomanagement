# ISO 22000 FSMS Docker Environment Configuration
# Copy this file to .env and update the values for your deployment

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql://iso22000_user:iso22000_password@postgres:5432/iso22000_fsms
DATABASE_TYPE=postgresql
REDIS_URL=redis://:redis_password@redis:6379/0

# Email Configuration
ENABLE_EMAIL_NOTIFICATIONS=True
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@iso-system.com
FROM_NAME=ISO 22000 FSMS

# Application Settings
APP_NAME=ISO 22000 FSMS
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://frontend:80"]
ALLOWED_CREDENTIALS=True

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Backup and Monitoring
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
RATE_LIMIT_PER_MINUTE=100

# Account Security
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# PostgreSQL Configuration
POSTGRES_DB=iso22000_fsms
POSTGRES_USER=iso22000_user
POSTGRES_PASSWORD=iso22000_password

# Redis Configuration
REDIS_PASSWORD=redis_password
